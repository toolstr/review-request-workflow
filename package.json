{
  "name": "@toolstr/review-request-workflow",
  "version": "2.0.2",
  "description": "A reusable review request workflow component for Shopify apps using heymantle.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "dist-example"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "concurrently 'npm:build:es' 'npm:build:types' 'npm:build:example'",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "npm run build",
    "build:es": "tsc -p tsconfig.es.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:example": "tsc -p tsconfig.example.json"
  },
  "keywords": [
    "react",
    "shopify",
    "review-request",
    "workflow",
    "vite",
    "typescript"
  ],
  "author": "Vikash <vikash@toolstr.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toolstr/review-request-workflow.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "url": "https://github.com/toolstr/review-request-workflow.git"
  },
  "dependencies": {
    "@shopify/polaris": "^13.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "prettier": "^3.5.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1"
  }
}
